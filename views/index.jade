extends layout

block content
  h1= title
  p This is Sequelize greeting you :)

  h2 Creating a new survey
  form(action="/surveys/create", method="post")
    input(type="text", name="surveyname")
    input(type="submit")

  h2 Surveys

  ul
  each survey in surveys
    li
      = survey.surveyname
      | &nbsp;
      | (
      a(href="/surveys/" + survey.id + "/destroy") Destroy
      | )
      ul
        li
          | Creating a new task:
          form(action="/surveys/" + survey.id + "/tasks/create", method="post", style="display: inline")
            input(type="text", name="title")
            input(type="submit")
        each task in survey.Tasks
          li
            = task.title
            | &nbsp;
            | (
            a(href="/surveys/" + survey.id + "/tasks/" + task.id + "/destroy") Destroy
            | )
